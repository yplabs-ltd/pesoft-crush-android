<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/id_text_title"
        android:layout_width="294dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#736763"
        android:text="답장하기"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#726763"
        />


    <net.pesofts.crush.widget.VoiceRecordView
        android:id="@+id/id_btn_voice_record"
        android:layout_width="158dp"
        android:layout_height="158dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="72dp"
        android:scaleType="centerInside"
        android:background="@color/alpha_0"
        />

    <TextView
        android:id="@+id/id_text_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:textColor="#9c9491"
        android:textSize="12sp"
        android:text="음성을 녹음해서 답장을 보내세요"
        android:visibility="visible"
        />
    
    <TextView
        android:id="@+id/id_btn_voice_reset"
        android:layout_width="99dp"
        android:layout_height="33dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="39dp"
        android:layout_marginBottom="39dp"
        android:background="@drawable/bg_btn_rect"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:text="다시 녹음하기"
        android:visibility="gone"
        />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ecebea"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/id_btn_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/alpha_0"
            android:textSize="16sp"
            android:textColor="#736763"
            android:text="취소"
            />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#ecebea"
            />

        <Button
            android:id="@+id/id_btn_send"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/alpha_0"
            android:textSize="16sp"
            android:textColor="@color/btn_send_text"
            android:text="보내기"
            android:enabled="false"
            />
    </LinearLayout>

</LinearLayout>