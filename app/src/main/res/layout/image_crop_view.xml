<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/cropLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/topDimmedView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:background="#99000000" />

        <View
            android:id="@+id/leftDimmedView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/topDimmedView"
            android:background="#99000000" />

        <View
            android:id="@+id/cropView"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:layout_below="@id/topDimmedView"
            android:layout_toRightOf="@id/leftDimmedView"
            android:background="@drawable/comm_img_crop" />

        <View
            android:id="@+id/bottomDimmedView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/leftDimmedView"
            android:layout_below="@id/cropView"
            android:layout_toRightOf="@id/leftDimmedView"
            android:background="#99000000" />

        <View
            android:id="@+id/rightDimmedView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/bottomDimmedView"
            android:layout_alignParentRight="true"
            android:layout_below="@id/topDimmedView"
            android:layout_toRightOf="@id/cropView"
            android:background="#99000000" />

        <ImageView
            android:id="@+id/leftTopArrowImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/comm_btn_crop01_background"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/rightTopArrowImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/comm_btn_crop02_background"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/leftBottomArrowImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/comm_btn_crop02_background"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/rightBottomArrowImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/comm_btn_crop01_background"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

</RelativeLayout>