<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <net.pesofts.crush.widget.VoicePlaySmallView
        android:id="@+id/id_btn_left_voice_play"
        android:layout_width="76.5dp"
        android:layout_height="76.5dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside"
        android:src="@drawable/ico_play_small"
        android:background="@color/alpha_0"
        app:vp_background="@color/main_text_color"
        />

    <LinearLayout
        android:id="@+id/id_left_text_container"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/id_btn_left_voice_play"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_text_left_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/main_text_color"
            tools:text="따뜻한 박양"
            />

        <TextView
            android:id="@+id/id_text_left_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="3dp"
            android:textSize="15sp"
            android:textColor="#b8b3b1"
            tools:text="5분전"
            />
    </LinearLayout>

    <View
        android:id="@+id/id_left_line"
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:background="#e3e1e0"
        android:layout_below="@+id/id_btn_left_voice_play"
        android:layout_centerHorizontal="true"
        />

    <net.pesofts.crush.widget.VoicePlaySmallView
        android:id="@+id/id_btn_right_voice_play"
        android:layout_width="76.5dp"
        android:layout_height="76.5dp"
        android:layout_below="@+id/id_left_line"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside"
        android:src="@drawable/ico_play_small"
        android:background="@color/alpha_0"
        app:vp_background="@color/main_red_color"
        />

    <LinearLayout
        android:id="@+id/id_right_text_container"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/id_left_line"
        android:layout_toRightOf="@+id/id_btn_right_voice_play"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_text_right_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/main_text_color"
            tools:text="따뜻한 박양"
            />

        <TextView
            android:id="@+id/id_text_right_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="15sp"
            android:textColor="#b8b3b1"
            tools:text="5분전"
            />
    </LinearLayout>


    <View
        android:id="@+id/id_right_line"
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:background="#e3e1e0"
        android:layout_below="@+id/id_btn_right_voice_play"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>